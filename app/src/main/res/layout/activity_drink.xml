<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:rowCount="2"
        app:useDefaultMargins="true"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_mineralwater"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="goToOrderActivity"
                android:src="@drawable/mineralwater" />

            <Button
                android:id="@+id/button_mineralwater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goToOrderActivity"
                android:text="Water" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_milk"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="goToOrderActivity"
                android:src="@drawable/milk" />

            <Button
                android:id="@+id/button_milk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goToOrderActivity"
                android:text="Milk" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_coffee"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="goToOrderActivity"
                android:src="@drawable/coffee" />

            <Button
                android:id="@+id/button_coffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goToOrderActivity"
                android:text="Coffee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_tea"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="goToOrderActivity"
                android:src="@drawable/tea" />

            <Button
                android:id="@+id/button_tea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goToOrderActivity"
                android:text="Tea" />
        </LinearLayout>


    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="goToMyOrderActivity"
        android:text="My Order"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>